    "pretest": "tsc",
    "test": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^11.1.2",
    "@nestjs/core": "^11.1.2",
    "@nestjs/platform-express": "^11.1.2",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "knex": "^3.1.0",
    "mysql2": "^3.14.1",
    "sqlite3": "^5.1.7",
    "tslib": "^2.8.1",
    "yaml": "^2.8.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.3",
    "@babel/preset-env": "^7.27.2",
    "@faker-js/faker": "^9.8.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "babel-jest": "^29.7.0",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "jest-mock-console": "^2.0.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
