    "test": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/core": "^11.1.8",
    "@nestjs/platform-express": "^11.1.8",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "knex": "^3.1.0",
    "mysql2": "^3.15.3",
    "sqlite3": "^5.1.7",
    "tslib": "^2.8.1",
    "yaml": "^2.8.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@faker-js/faker": "^10.1.0",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.1",
